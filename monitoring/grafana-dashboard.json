{
  "dashboard": {
    "id": null,
    "title": "Hub DefiSats - Production Monitoring",
    "tags": ["hub-defisats", "trading", "automation"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"hub-defisats-.+\"}",
            "legendFormat": "{{ job }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"hub-defisats-backend\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"hub-defisats-backend\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\", job=\"hub-defisats-backend\"}[5m]) / rate(http_requests_total{job=\"hub-defisats-backend\"}[5m]) * 100",
            "legendFormat": "Error rate %"
          }
        ]
      },
      {
        "id": 4,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active connections"
          }
        ]
      },
      {
        "id": 5,
        "title": "Redis Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory usage (MB)"
          }
        ]
      },
      {
        "id": 6,
        "title": "Trade Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_defisats_trades_success_total[5m]) / rate(hub_defisats_trades_total[5m]) * 100",
            "legendFormat": "Success rate %"
          }
        ]
      },
      {
        "id": 7,
        "title": "Worker Queue Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "hub_defisats_worker_queue_size",
            "legendFormat": "{{ worker }} queue"
          }
        ]
      },
      {
        "id": 8,
        "title": "User Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_defisats_active_users[5m])",
            "legendFormat": "Active users"
          }
        ]
      },
      {
        "id": 9,
        "title": "Payment Processing",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_defisats_payments_total[5m])",
            "legendFormat": "Payments/min"
          },
          {
            "expr": "rate(hub_defisats_payments_failed_total[5m])",
            "legendFormat": "Failed payments/min"
          }
        ]
      },
      {
        "id": 10,
        "title": "LN Markets API Health",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(hub_defisats_lnmarkets_api_errors_total[5m])",
            "legendFormat": "API errors/min"
          }
        ]
      },
      {
        "id": 11,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cpu_usage_seconds_total[5m]) * 100",
            "legendFormat": "CPU usage %"
          },
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Memory usage (GB)"
          }
        ]
      },
      {
        "id": 12,
        "title": "Automation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_defisats_automations_executed_total[5m])",
            "legendFormat": "Automations/min"
          },
          {
            "expr": "histogram_quantile(0.95, rate(hub_defisats_automation_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile execution time"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}

