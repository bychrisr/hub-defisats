# Hub DeFiSATS - Development Environment Configuration
# This file contains development-specific environment variables

# Admin Credentials (for development/testing only)
ADMIN_EMAIL=admin@hub-defisats.com
ADMIN_PASSWORD=Admin123!@#

# Frontend Admin Credentials
VITE_ADMIN_EMAIL=admin@hub-defisats.com
VITE_ADMIN_PASSWORD=Admin123!@#

# Database (Development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hub_defisats_dev

# Redis (Development)
REDIS_URL=redis://localhost:6379

# JWT Secrets (Development - Change in production)
JWT_SECRET=dev-jwt-secret-key-change-in-production-32chars
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-32chars
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-key-change-in-production-32chars

# Encryption Key (Development - Change in production)
ENCRYPTION_KEY=dev-encryption-key-32-chars-2024

# Environment
NODE_ENV=development
PORT=13000
VITE_API_URL=http://localhost:13000

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=debug
PROMETHEUS_PORT=9090

# Security
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=900000

# LN Markets API (Development - Optional)
LN_MARKETS_API_URL=https://api.lnmarkets.com
LN_MARKETS_API_KEY=
LN_MARKETS_API_SECRET=
LN_MARKETS_PASSPHRASE=
