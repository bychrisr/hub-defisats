# Hub DeFiSATS - Development Environment Configuration
# This file contains development-specific environment variables

# Admin Credentials (for development/testing only)
ADMIN_EMAIL=admin@hub-defisats.com
ADMIN_PASSWORD=Admin123!@#

# Frontend Admin Credentials
VITE_ADMIN_EMAIL=admin@hub-defisats.com
VITE_ADMIN_PASSWORD=Admin123!@#

# Database (Development)
DATABASE_URL=postgresql://hubdefisats:hubdefisats_dev_password@postgres:5432/hubdefisats

# Redis (Development)
REDIS_URL=redis://redis:6379

# JWT Secrets (Development - Change in production)
JWT_SECRET=dev-jwt-secret-key-change-in-production-32chars
JWT_EXPIRES_IN=2h
REFRESH_TOKEN_SECRET=dev-refresh-secret-key-change-in-production-32chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption Key (32 characters minimum)
ENCRYPTION_KEY=dev-encryption-key-32-characters-minimum

# Environment
NODE_ENV=development
PORT=3010
VITE_API_URL=http://localhost:13010

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=debug
LOG_FORMAT=simple
PROMETHEUS_PORT=9090

# Security
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:13000

# LN Markets API (Development - Optional)
LN_MARKETS_API_URL=https://api.lnmarkets.com
LN_MARKETS_SANDBOX_URL=https://api.lnmarkets.com/sandbox
LN_MARKETS_API_KEY=
LN_MARKETS_API_SECRET=
LN_MARKETS_PASSPHRASE=

# Social Auth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EVOLUTION_API_URL=
EVOLUTION_API_KEY=

# Lightning Network (Optional)
LND_GRPC_URL=
LND_MACAROON_PATH=
LND_TLS_CERT_PATH=
LNBITS_URL=
LNBITS_ADMIN_KEY=

# Monitoring (Optional)
SENTRY_DSN=
