# Development Environment Variables

# Application
NODE_ENV=development
PORT=3010

# Database
DATABASE_URL=postgresql://axisor:axisor_dev_password@postgres:5432/axisor?schema=public
POSTGRES_DB=axisor
POSTGRES_USER=axisor
POSTGRES_PASSWORD=axisor_dev_password

# Redis
REDIS_URL=redis://redis:6379

# CORS
CORS_ORIGIN=http://localhost:13000

# JWT
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# LN Markets API
LN_MARKETS_API_BASE_URL=https://api.lnmarkets.com/v2
LN_MARKETS_API_BASE_URL_TESTNET=https://api.testnet4.lnmarkets.com/v2
LN_MARKETS_API_BASE_URL_CURRENT=https://api.lnmarkets.com/v2

# Frontend
VITE_API_URL=http://localhost:13010
VITE_WS_URL=ws://localhost:13010
VITE_APP_NAME=Axisor
VITE_APP_VERSION=0.0.4

# Logging
LOG_LEVEL=debug

# Email (opcional para dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@axisor.com

# Notification (opcional)
NOTIFICATION_EMAIL_ENABLED=false

# Security
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_TTL=3600
CACHE_PREFIX=axisor

# WebSocket
WS_PORT=3010
WS_PATH=/ws

# Admin
ADMIN_EMAIL=admin@axisor.com
ADMIN_PASSWORD=Admin123!@#

# Development flags
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_DEV_TOOLS=true
