{
  "name": "hub-defisats-backend",
  "version": "0.0.1",
  "description": "Backend API for hub-defisats - LN Markets automation platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "tsx src/tests/security.test.ts",
    "test:idor": "tsx src/tests/idor.test.ts",
    "test:performance": "tsx src/tests/performance.test.ts",
    "test:all": "tsx src/tests/run-tests.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "worker:margin-monitor": "tsx src/workers/margin-monitor.ts",
    "worker:margin-monitor:prod": "node -r tsconfig-paths/register dist/workers/margin-monitor.js",
    "kill-zombies": "pkill -f 'node.*fastify' || true && pkill -f 'npm.*dev' || true && pkill -f 'tsx.*index' || true && pkill -f 'postgres' || true && pkill -f 'redis-server' || true",
    "reset-db": "npm run kill-zombies && docker-compose down && docker-compose up -d && npx prisma migrate reset --force && npx prisma db push",
    "worker:automation-executor": "tsx src/workers/automation-executor.ts",
    "worker:automation-executor:prod": "node -r tsconfig-paths/register dist/workers/automation-executor.js",
    "worker:notification": "tsx src/workers/notification.ts",
    "worker:notification:prod": "node -r tsconfig-paths/register dist/workers/notification.js",
    "worker:payment-validator": "tsx src/workers/payment-validator.ts",
    "worker:payment-validator:prod": "node -r tsconfig-paths/register dist/workers/payment-validator.js",
    "worker:all": "concurrently \"npm run worker:*\""
  },
  "keywords": [
    "bitcoin",
    "lightning",
    "trading",
    "automation",
    "ln-markets",
    "fastify",
    "typescript"
  ],
  "author": "hub-defisats",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.0.1",
    "@fastify/swagger": "^9.0.1",
    "@fastify/swagger-ui": "^5.0.1",
    "@fastify/websocket": "^11.0.1",
    "@prisma/client": "^5.19.1",
    "@sentry/node": "^8.15.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.15.0",
    "dompurify": "^3.0.8",
    "dotenv": "^17.2.2",
    "fastify": "^5.0.0",
    "glob": "^11.0.3",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.5.0",
    "libsodium-wrappers": "^0.7.13",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.0",
    "speakeasy": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.12.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.6",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
